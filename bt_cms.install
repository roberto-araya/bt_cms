<?php

/**
 * @file
 * Install, update and uninstall functions for bt_cms.
 */

/**
 * Implements hook_install().
 */
 function bt_cms_install() {
    foreach (['comment', 'content', 'content_recent', 'moderated_content'] as $view) {
        \Drupal::entityTypeManager()->getStorage('view')
        ->load($view)
        ->setStatus(FALSE)
        ->save();
    }
 }
